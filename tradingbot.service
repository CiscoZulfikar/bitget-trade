[Unit]
Description=Bitget Trading Bot
After=network.target

[Service]
# User running the script
User=${USER}
# Group=${USER}

# Working Directory
WorkingDirectory=${PROJECT_DIR}

# Command to run (Absolute path to venv python)
ExecStart=${VENV_DIR}/bin/python3 main.py

# Restart policy
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
